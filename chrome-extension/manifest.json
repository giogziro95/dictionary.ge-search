{
	"manifest_version": 2,

	"name": "Dictionary.ge search",
	"version": "0.1",
	"description": "Searches for selected text on Dictionary.ge.",
	"author": "Giorgi Gzirishvili",
	"icons": {
		"16": "icons/16.png",
		"48": "icons/48.png"
	},

	"permissions": [
		"tabs",
		"contextMenus",
		"http://*/*",
		"https://*/*"
	],
	
	"background": {
		"scripts": ["event.js"],
		"persistent": false
	}
}